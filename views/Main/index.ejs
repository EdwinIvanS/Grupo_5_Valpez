<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
    <link href="/css/styles_home.css" rel="stylesheet">
    <title>.:Home:.</title>
</head>

<body>
    <!-- Seccion de la cabecera-->
    <%- include('../partials/header') %>

    <!-- Seccion del cuerpo-->
    <main>
        <div class="carrusel">
            <div class="slide1"><img src="/img/Slide1.jpg" alt="señuelos"></div>
            <div class="slide2"><img src="/img/Slide2.jpg" alt="pescando"></div>
            <div class="slide3"><img src="/img/Slide3.jpg" alt="carpas"></div>
        </div>
        <div class="categories">
            <div class="subCategories">
                <img src="/img/Category-camping.jpg" alt="camping">
                <a class="cam" href="/products/camping">CAMPING</a>
            </div>
            <div class="subCategories">
                <img src="/img/Category-fishing.jpg" alt="fishing">
                <a class="pes" href="/products/pesca">PESCA</a>
            </div> 
        </div>
        

        <!-- productos destacados -->
        <div class="related">
            <h2>Productos Destacados</h2>

            <div class="relatedProducts">
                <% for(let i=0 ; i < products.length ; i ++) {%>                        
                            <article class="product">
                                <a href="/products/detail/<%= products[i].id%>">
                                    <img src="/img/Products/<%= products[i].Images[0] %>" alt="producto5">
                                </a>
                                <h3>
                                    <%= products[i].title%>
                                </h3>
                                <p>
                                    <%= products[i].price%>
                                </p>
                                <form class="selection1" action="#" method="get">
                                    <div>
                                        <select name="color" id="color">
                                            <% let arrayColors = products[i].colors.split(',')
                                                for (let c = 0; c < arrayColors.length; c++) {%>
                                                <option value="<%= arrayColors[c]%>"><%= arrayColors[c]%></option>
                                                <% } %>
                                        </select>
                
                                        <select name="quantity" id="quantity">
                                            <% for (let q = 1; q <= products[i].units; q++) {%>
                                                <option value="<%= q %>"><%= q %></option>
                                                <% } %>
                                        </select>
                                    </div>
                                    <div>
                                        <select name="size" id="size">
                                            <% let arraySizes = products[i].sizes.split(',')
                                            for (let s = 0; s < arraySizes.length; s++) {%>
                                                <option value="<%= arraySizes[s]%>"><%= arraySizes[s]%></option>
                                                <% } %>
                                        </select>
                
                                        <button type="submit"><i class="fa-solid fa-cart-plus"></i></button>
                                    </div>
                                </form>
                            </article>
                        
                <% } %>
            </div>
        </div>

        <!-- productos nuevos -->
        <div class="related">
            <h2>Nuevos Productos</h2>

            <div class="relatedProducts">

                <% for(let i=0 ; i < products.length ; i ++) {%>
                        
                    <article class="product">
                                <a href="/products/detail/<%= products[i].id%>">
                                    <img src="/img/Products/<%= products[i].Images[0] %>" alt="producto5">
                                </a>
                                <h3>
                                    <%= products[i].title%>
                                </h3>
                                <p>
                                    <%= products[i].price%>
                                </p>
                                <form class="selection1" action="#" method="get">
                                    <div>
                                        <select name="color" id="color">
                                            <% let arrayColors = products[i].colors.split(',')
                                                for (let c = 0; c < arrayColors.length; c++) {%>
                                                <option value="<%= arrayColors[c]%>"><%= arrayColors[c]%></option>
                                                <% } %>
                                        </select>
                
                                        <select name="quantity" id="quantity">
                                            <% for (let q = 1; q <= products[i].units; q++) {%>
                                                <option value="<%= q %>"><%= q %></option>
                                                <% } %>
                                        </select>
                                    </div>
                                    <div>
                                        <select name="size" id="size">
                                            <% let arraySizes = products[i].sizes.split(',')
                                            for (let s = 0; s < arraySizes.length; s++) {%>
                                                <option value="<%= arraySizes[s]%>"><%= arraySizes[s]%></option>
                                                <% } %>
                                        </select>
                
                                        <button type="submit"><i class="fa-solid fa-cart-plus"></i></button>
                                    </div>
                                </form>
                            </article>
                <% } %>
            </div>
        </div>

        <div class="consejo">
            <h2>Nuestro Blog</h2>
            <img src="/img/tackle-box.jpg" alt="box">
            <div>
                <p>Conoce trucos, técnicas y consejos</p>
                <button type="submit">Aprende mas</button> 
            </div>
        </div>
        
    </main>

    <!-- Seccion del pie de pagina-->
    <%- include('../partials/footer') %>

</body>

</html>